{
  "name": "tcg-catalog",
  "version": "0.1.0",
  "description": "A TCG card engine code challenge solution",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "build:clean": "rimraf lib",
    "data:ingest": "./lib/cjs/scripts/ingest/index.js",
    "format": "prettier --write ./src/**/*.ts",
    "lint": "eslint ./src",
    "prebuild": "pnpm run build:clean",
    "test": "jest --config=jest.config.mjs --runInBand",
    "test:integration:js": "pnpm run test:js --selectProjects Integration",
    "test:js": "jest --config=jest.js.config.mjs --runInBand",
    "test:js:coverage": "pnpm run test:js --coverage",
    "test:uncommitted": "pnpm run test --changedSince=HEAD",
    "test:unit:js": "pnpm run test:js --selectProjects Unit",
    "serve": "trap '' INT TERM; node lib/cjs/app/adapter/nest/scripts/bootstrap.js"
  },
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@nestjs/common": "10.4.15",
    "@nestjs/core": "10.4.15",
    "@nestjs/platform-fastify": "10.4.15",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "dotenv": "16.4.7",
    "envalid": "8.0.0",
    "fastify": "4.29.0",
    "http-status-codes": "2.3.0",
    "jsonwebtoken": "9.0.2",
    "mongodb": "6.12.0"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@jest/globals": "29.7.0",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "@types/jsonwebtoken": "9.0.7",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "jest": "29.7.0",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.0"
  },
  "author": "Roberto Pintos LÃ³pez",
  "license": "See license in \"LICENSE\" file"
}
